<!-- Validation failure messages -->

<% if @interaction.errors.any? %>
  <% @interaction.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Interaction #<%= @interaction.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_interaction/<%= @interaction.id %>" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-2 control-label">
          User
        </label>
        <div class="col-sm-10">
          <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @interaction.user_id %>">
        </div>
      </div>

      <!-- Label and input for occurs_on -->
      <div class="form-group">
        <label for="occurs_on" class="col-sm-2 control-label">
          Occurs on
        </label>
        <div class="col-sm-10">
          <input type="text" id="occurs_on" name="occurs_on" placeholder="Occurs on" class="form-control" value="<%= @interaction.occurs_on %>">
        </div>
      </div>

      <!-- Label and input for occurs_at -->
      <div class="form-group">
        <label for="occurs_at" class="col-sm-2 control-label">
          Occurs at
        </label>
        <div class="col-sm-10">
          <input type="text" id="occurs_at" name="occurs_at" placeholder="Occurs at" class="form-control" value="<%= @interaction.occurs_at %>">
        </div>
      </div>

      <!-- Label and input for goal_id -->
      <div class="form-group">
        <label for="goal_id" class="col-sm-2 control-label">
          Goal
        </label>
        <div class="col-sm-10">
          <input type="text" id="goal_id" name="goal_id" placeholder="Goal" class="form-control" value="<%= @interaction.goal_id %>">
        </div>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">
          Description
        </label>
        <div class="col-sm-10">
          <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @interaction.description %>">
        </div>
      </div>

      <!-- Label and input for experiment_id -->
      <div class="form-group">
        <label for="experiment_id" class="col-sm-2 control-label">
          Experiment
        </label>
        <div class="col-sm-10">
          <input type="text" id="experiment_id" name="experiment_id" placeholder="Experiment" class="form-control" value="<%= @interaction.experiment_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Interaction" class="btn btn-warning">
          or
          <a href="/interactions/<%= @interaction.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

