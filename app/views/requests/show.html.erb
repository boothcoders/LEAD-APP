<div class="row">
  <div class="col-md-12">
    <h2>Do you want to give <%= @request.requestor.first_last %> feedback about <%= @request.interaction.interaction_title %> (<%= @request.interaction.interaction_date.strftime("%b %e") %>)?</h2>    
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <strong>Notes from <%= @request.requestor.first_last %>:</strong>
    <%= @request.feedback_note %>
  </div>
</div>
<p>&nbsp;</p>
<div class="row">
  <div class="col-md-6">
    <%= link_to "Give feedback", new_feedback_give_path(:request => @request.id), :type => "button", :class => "btn btn-lg btn-block btn-success", :style => "white-space: normal" %>
    <p>&nbsp;</p>
  </div>
  <div class="col-md-6">
    <%= link_to "Decline to give feedback", "#", :type => "button", :class => "btn btn-lg btn-block btn-danger", :style => "white-space: normal" %>
    <p>&nbsp;</p>
  </div>
</div>

<%= link_to 'Back', requests_path %>
