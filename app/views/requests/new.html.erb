<!-- Validation failure messages -->

<% if @request.errors.any? %>
  <% @request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Request</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_request" class="form-horizontal">
      <!-- Label and input for requester_id -->
      <div class="form-group">
        <label for="requester_id" class="col-sm-2 control-label">
          Requester
        </label>
        <div class="col-sm-10">
          <input type="text" id="requester_id" name="requester_id" placeholder="Requester" class="form-control" value="<%= @request.requester_id %>">
        </div>
      </div>

      <!-- Label and input for requested_id -->
      <div class="form-group">
        <label for="requested_id" class="col-sm-2 control-label">
          Requested
        </label>
        <div class="col-sm-10">
          <input type="text" id="requested_id" name="requested_id" placeholder="Requested" class="form-control" value="<%= @request.requested_id %>">
        </div>
      </div>

      <!-- Label and input for goal_id -->
      <div class="form-group">
        <label for="goal_id" class="col-sm-2 control-label">
          Goal
        </label>
        <div class="col-sm-10">
          <input type="text" id="goal_id" name="goal_id" placeholder="Goal" class="form-control" value="<%= @request.goal_id %>">
        </div>
      </div>

      <!-- Label and input for interaction_id -->
      <div class="form-group">
        <label for="interaction_id" class="col-sm-2 control-label">
          Interaction
        </label>
        <div class="col-sm-10">
          <input type="text" id="interaction_id" name="interaction_id" placeholder="Interaction" class="form-control" value="<%= @request.interaction_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Request" class="btn btn-success">
          or
          <a href="/requests">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

