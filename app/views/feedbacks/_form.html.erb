<%= form_for(@feedback) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul>
      <% @feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h3>Feedback notes: <%=Request.find_by(:id => @request).feedback_note%></h3>
  <div class="field">
    <%= f.hidden_field :enterer_id, :value => current_user.id %><br>
    <%= f.hidden_field :enteree_id, :value => Request.find_by(:id => @request).requestor.id %><br>
    <%= f.hidden_field :goal_id, :value => '1' %><br> <!-- WILL NEED TO UPDATE WITH PROPER GOAL -->
    <%= f.hidden_field :interaction_id, :value => Request.find_by(:id => @request).interaction.id %><br>
    <%= f.hidden_field :request_id, :value => Request.find_by(:id => @request).id %><br>
  </div>
  <div class="field">
    <%= f.label :entry_note %><br>
    <%= f.text_area :entry_note %>
  </div>
  <div class="field">
    <%= f.label "Please rate from 1 to 3 where 1 is 'below average', 2 is 'average', and 3 is 'above average'" %><br>
    <%= f.number_field :entry_rating %>
  </div>
<!--   <div class="field">
    <%= f.label :request_id %><br>
    <%= f.number_field :request_id %>
  </div> -->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

