<!-- Validation failure messages -->

<% if @goal.errors.any? %>
  <% @goal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Goal #<%= @goal.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_goal/<%= @goal.id %>" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-2 control-label">
          User
        </label>
        <div class="col-sm-10">
          <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @goal.user_id %>">
        </div>
      </div>

      <!-- Label and input for starts_on -->
      <div class="form-group">
        <label for="starts_on" class="col-sm-2 control-label">
          Starts on
        </label>
        <div class="col-sm-10">
          <input type="text" id="starts_on" name="starts_on" placeholder="Starts on" class="form-control" value="<%= @goal.starts_on %>">
        </div>
      </div>

      <!-- Label and input for ends_on -->
      <div class="form-group">
        <label for="ends_on" class="col-sm-2 control-label">
          Ends on
        </label>
        <div class="col-sm-10">
          <input type="text" id="ends_on" name="ends_on" placeholder="Ends on" class="form-control" value="<%= @goal.ends_on %>">
        </div>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">
          Description
        </label>
        <div class="col-sm-10">
          <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @goal.description %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Goal" class="btn btn-warning">
          or
          <a href="/goals/<%= @goal.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

